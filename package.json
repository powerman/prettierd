{
  "name": "@powerman-asdf/prettierd",
  "version": "0.26.2",
  "description": "prettier, as a daemon",
  "bin": {
    "prettierd": "./bin/prettierd"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "tsc -b",
    "run": "node bin/prettierd",
