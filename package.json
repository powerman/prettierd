    "@types/prettier": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@powerman-asdf/core_d": "^6.1.1",
    "prettier": "^3.6.2"
  },
  "files": [
    "bin",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "optionalDependencies": {
    "@babel/parser": "^7.28.0",
